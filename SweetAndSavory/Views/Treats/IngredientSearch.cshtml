@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Treat>

<h3>Search Results:</h3>
<hr />
@if (Model.Count == 0)
{
  <p>No Treats Found Using This Ingredient.</p>
}
else
{
  <h4>Treats Found Using This Ingredient:</h4>
  @foreach(Treat treat in Model)
  {
    <h4>@Html.ActionLink($"{treat.Name}", "Details", "Treats", new {id = treat.TreatId})</h4>
  }
}