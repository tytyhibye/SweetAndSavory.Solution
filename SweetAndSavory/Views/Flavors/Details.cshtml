@{
  Layout = "_Layout";
}

@model SweetAndSavory.Models.Flavor;

<h2>Flavor Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>
<hr />
@if (@Model.Treats.Count == 0)
{
  <p>This Flavor has not been added to any treats</p>
}
else
{
  <h3>Treats using this Flavor:</h3>
  <ul>
  @foreach (var join in Model.Treats)
  {
    <p>@join.Treat.Name</p>
    @* <p>@Html.ActionLink($"{Treat.Name}", "Details", new { id = Treat.TreatId })</p> *@
  }
  </ul>
}
<br>
<p>@Html.ActionLink("Edit Flavor", "Edit", new { id = Model.FlavorId }) | 
  @Html.ActionLink("Delete Flavor", "Delete", new { id = Model.FlavorId })</p>