@{
  Layout = "_Layout";
}

@using SweetAndSavory.Models;
@model List<SweetAndSavory.Models.Flavor>;
<hr />
<h2>Current List of Flavors</h2>
<hr />

@foreach(Flavor flavor in Model)
{
  <p>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</p>
}


@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 
<br>
<form action="/Flavors/Create" method="get">
  <input type="submit" value="Add new Flavor" class="btn">
</form>
